<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <HediffDef>
        <defName>Kitsune_PolymerHarmony</defName>
        <label>Polymer Harmony</label>
        <description>A nearby kitsune helped harmonize this cinder with their polymer</description>
        <hediffClass>HediffWithComps</hediffClass>
        <isBad>false</isBad>
        <initialSeverity>0.0001</initialSeverity>
        <keepOnBodyPartRestoration>true</keepOnBodyPartRestoration>
        <alwaysAllowMothballCached>true</alwaysAllowMothballCached>
        <stages>
            <li>
                <label>Soothed</label>
                <minSeverity>0</minSeverity>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.05</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.03</offset>
                    </li>
                    <li>
                        <capacity>Pain</capacity>
                        <offset>-0.1</offset>                       
                    </li>
                </capMods>
                <moodEffect>+5</moodEffect>
            </li>
            <li>
                <label>Relaxed</label>
                <minSeverity>0.15</minSeverity>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.06</offset>
                    </li>
                    <li>
                        <capacity>Pain</capacity>
                        <offset>-0.2</offset>                        
                    </li>
                </capMods>
                <moodEffect>+10</moodEffect>
            </li>
            <li>
                <label>In control</label>
                <minSeverity>0.4</minSeverity>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.15</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.09</offset>
                    </li>
                    <li>
                        <capacity>Blood Filtration</capacity>
                        <offset>0.05</offset>
                    </li>
                    <li>
                        <capacity>Pain</capacity>
                        <offset>-0.3</offset>                        
                    </li>
                </capMods>
                <moodEffect>+15</moodEffect>
            </li>
            <li>
                <label>Harmonised</label>
                <minSeverity>0.85</minSeverity>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.2</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.12</offset>
                    </li>
                    <li>
                        <capacity>Blood Filtration</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Metabolism</capacity>
                        <offset>0.1</offset>
                    </li>
                    <li>
                        <capacity>Pain</capacity>
                        <offset>-0.4</offset>                        
                    </li>
                </capMods>
                <moodEffect>+20</moodEffect>
            </li>
        </stages>
        <renderNodeProperties />
    </HediffDef>

    <HediffDef>
        <defName>Kitsune_PolymerHarmony_Withdraw</defName>
        <label>Harmony withdrawal</label>
        <description>No kitsune has harmonized this cinder's polymer in a long while !</description>
        <hediffClass>HediffWithComps</hediffClass>
        <isBad>true</isBad>
        <initialSeverity>0.0001</initialSeverity>
        <keepOnBodyPartRestoration>true</keepOnBodyPartRestoration>
        <alwaysAllowMothballCached>true</alwaysAllowMothballCached>
        <stages>
            <li>
                <label>Unsettled</label>
                <minSeverity>0.2</minSeverity>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.1</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.05</offset>
                    </li>
                </capMods>
                <moodEffect>-10</moodEffect>
            </li>
            <li>
                <label>Distressed</label>
                <minSeverity>0.5</minSeverity>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.2</offset>
                    </li>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.1</offset>
                    </li>
                    <li>
                        <capacity>Pain</capacity>
                        <offset>0.3</offset>
                    </li>
                </capMods>
                <moodEffect>-20</moodEffect>
            </li>
            <li>
                <label>Biological dysfunctionning</label>
                <minSeverity>0.8</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-1</offset>
                    </li>
                </capMods>
                <moodEffect>-40</moodEffect>
            </li>
        </stages>
        <renderNodeProperties />
    </HediffDef>
</Defs>